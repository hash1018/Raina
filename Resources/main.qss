QLineEdit {

    background: #AFAFAF;
    border: 1px solid #FFFFFF;	
	border-radius: 5px;
    selection-background-color: #12AE79;
    color:white;

}

QLineEdit:disabled {
    background:#434343;
    border: 0px;
	border-radius: 5px;
    color: #7C7C7C;
}

