QPushButton {
    background-color: #535353;
    border: 0px;
    border-radius: 5px;
    color:white;
}

QPushButton:disabled {
    background-color: #424242;
    border: 0px;
    border-radius: 5px;
    color: #7C7C7C;
}

QPushButton:hover {
    background-color: #9B9B9B;
    border: 0px;
    border-radius: 5px;
}

